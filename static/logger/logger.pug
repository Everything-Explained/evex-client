doctype html

html
  head
    title= logs
    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css')
    link(rel='stylesheet' href='static/logger/logger.css')
    script(src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js')
    script(src='static/libs/web.js')
    script(src='../libs/live.js')
    script.
      W = Web;

  body
    section#MainContent
      div#modal1.modal
        div.modal-content
          div.content-container
            header
              h5.green-text.text-darken-1 REQ
                span.url
            table
              tr
                td.method-label.small.material-icons label
                td#URL
                  span /internal/logger
              tr
                td.field-label.small.material-icons label
                td
                  table.inner
                    tr
                      td filename
                      td requests.log
                    tr
                      td test
                      td value
              tr
                td.body-label.small.material-icons label
                td#Body
                  span asdf908123rojfpasiudf812
              tr
                td

          div.content-container
            header
              h5.orange-text.text-darken-1 RES
            table
              tr
                td.method-label.small.material-icons label
                td 404
              tr
                td
        div.modal-footer
          a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Close



      div#container
        div.input-field
          select#SelectFile.deep-purple-text.text-darken-1(v-el:select onchange='vm.$get("onLogChange")()')
            each val in logs
              if val == 'noumenae.one'
                options(selected)= val
              else
                option= val

          label Available Logs
        div.input-field.number
          label Length
          input#Length.deep-purple-text.text-darken-1(
              type='number' min='10' max='1020' v-model='userLength' step='20')
        div.input-field.number
          label Multiplier
          input#LengthMultiplier.deep-purple-text.text-darken-1(
              type='number' min='1' max='10' v-model='multiplier' step='1')
        div.div-field
          label Actual Length
          span#LogLength.pink-text.text-accent-2 {{ logLength }}
        div.div-field.req-length.green-text.text-darken-1
          label Req Length
          span#ReqLength(v-text='reqLength')

        div#content(v-el:content)
          div(v-for='log in logLines'
              track-by='uid'
              class='{{* log.classes }}')
            span.time {{* log.time }}
            span.identity {{* log.identity }}
            span.method(v-if='log.method') {{* log.method }}
            span.data(v-if='log.data') {{* log.data }}
            span.msg {{* log.msg }}

        button#Refresh.waves-effect.waves-light.deep-purple.lighten-1.btn(
          v-bind:class='{ "orange": isLogPolling, "darken-1": isLogPolling}'
          v-on:click='toggleLogPolling($event)') {{ pollingText }}
        button#Delete.waves-effect.waves-light.red.darken-1.btn(v-on:click='deleteLog' v-el:btnDelete) Delete
        button#Test.waves-effect.waves-light.blue.darken-1.btn.modal-trigger(
            data-target='modal1') Test
        div.div-field.time.green-text.text-darken-1
          label Render Time
          span#RenderTime {{ renderTime }}

    script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/1.0.13/vue.min.js')
    script(src='static/logger/v-logger.js')

