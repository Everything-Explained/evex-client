
template
  div#overlay
    div.modal-preloader
  aside#GenericModal.modal-overlay
    div.modal-preload-container
      div.preloader
    section.modal-container
      header #[span gen #[span.normal 1:1-2]]
      section
        h2 The Creation of the World
        div.legend
          b.col1 1:1
          span.col2 In the beginning God created the heavens and the earth.
        div.legend
          b.col1 1:2
          span.col2 Now the earth was without shape and empty, and darkness was over the surface of the watery deep, but the Spirit of God was moving over the surface of the water.
        div.legend
          b.col1 11:31
          span.col2 God said, “Let there be light.” And there was light!
        div.legend
          b.col1 1:4
          span.col2 God saw that the light was good, so God separated the light from the darkness.
        div.legend
          b.col1 1:5
          span.col2 God called the light “day” and the darkness “night.” There was evening, and there was morning, marking the first day.

      footer
      a.modal-close(href='javascript:void(0)') &#10060;

  section#PageTop
    header.global
      div.ribbon
      aside.logo(click.delegate='test()')



    div#PageTransition(class='${page.overlay? "active" : ""}')

    section#TrayTop.buffer
      aside.watermark #[span alpha#[span.num v${version}]]

      menu#TabMenu
        ul
          li( repeat.for='route of activeRoutes',
              mousedown.delegate='$parent.goTo(route.href)',
              class=`\${route.isActive ? "active" : ""}
                     \${route.config.classes ? route.config.classes : ""} `) ${route.config.name}

    section#PageMiddle
      section#TrayLeft(class='buffer2 ${utils.page.leftTray.className}')
        menu#MainMenu
          ul
            li( repeat.for='item of mainMenu'
                mousedown.delegate='$parent.populateRoutes(item, $event, true)'
                class='${item.isActive ? "active" : ""}'
                innerhtml='<span>${item.name}</span>')

      router-view#PageContent.optiscroll

      section#TrayRight(class='buffer2 ${page.rightTray.className}')

    footer#TrayBottom.buffer
