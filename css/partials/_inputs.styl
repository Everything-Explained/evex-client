$inputBackground = #333
$shadowColor = darken($inputBackground, 33%)
$shadowHoverColor = lighten($shadowColor, 7%)
input[type='text'], textarea
  position: relative
  display block
  width 200px
  background-color: #171717
  border 7px solid #333
  padding 10px 8px
  font-size: medium
  color #aaa
  border-radius 5px
  box-shadow: inset 0 0 17px 2px #000
  transition border .2s linear
  &:focus
    border-color hsl(50, 70%, 17%)

  &::-webkit-input-placeholder
    font-family: Verdana, Geneva, Tahoma, sans-serif
    text-shadow: 1px 1px 0 #000, 2px 2px 0 #000
    word-spacing: normal
    color #555
    transition all .3s

  &::-moz-placeholder
    font-family: Verdana, Geneva, Tahoma, sans-serif
    text-shadow: 1px 1px 0 #000, 2px 2px 0 #000, 3px 3px 0 #000
    word-spacing: normal
    color #777
    transition all .3s


button, input[type='button']
  position: relative
  margin-top 20px
  background hsl(0, 0%, 33%)
  border-radius 3px
  padding 7px 13px
  color hsl(0, 0%, 0%)
  font-weight: bold
  font-size: 20px
  font-family: 'Source Code Pro'
  text-shadow: 1px 1px 0 hsl(0, 0%, 48%)
  box-shadow: -2px 3px 0 2px hsl(0, 0%, 20%)
  cursor: pointer
  transition: all .05s linear
  &:hover:enabled
    background hsl(50, 35%, 33%)
    box-shadow: -2px 3px 0 2px hsl(50, 35%, 20%)
    text-shadow: 1px 1px 0 hsl(50, 10%, 58%)
  &:active:enabled
    transform: translate(-4px, 4px)
    box-shadow: 0 0 0 0 hsl(50, 20%, 14%)
  &:disabled
    opacity 0.35
    cursor

