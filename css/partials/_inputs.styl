
$inputBackground = #333
$shadowColor = darken($inputBackground, 33%)
$shadowHoverColor = lighten($shadowColor, 7%)
input, textarea
  position relative
  display block
  width 100%
  background $inputBackground
  color hsl(50, 33%, 50%)
  font-size 22px
  font-family "Comic Sans MS"
  padding 7px
  // border 2px solid #000
  box-shadow box3d(5, $shadowColor)
  transition all .3s
  // TODO - Textboxes should have a nice transition
  // &:hover, &:focus
  //   color hsl(50, 50%, 50%)
  //   background hsl(50, 33%, 20%)
  //   box-shadow box3d(5, darken(@background, 33%))
  //   &::-webkit-input-placeholder
  //     color lighten(#606060, 10%)

  &::-webkit-input-placeholder
    color #606060
    transition all .3s

$baseColor = hsl(50, 100%, 30%)
button
  position relative
  display inline-block
  border-radius 8px
  margin-top 20px
  background-color transparent
  cursor pointer
  border-radius 5px
  letter-spacing 1px
  color #bbb
  font-family 'Comic Sans MS'
  text-shadow -1px -1px 0 #000
  box-shadow 0 9px 0 hsla(0, 0%, 100%, 0.35), 0 10px 0 2px $baseColor
  &:hover span
    color hsl(50, 80%, 50%)
  &:active
    transform translate(0, 3px)
    box-shadow 0 6px 0 hsla(0, 0%, 100%, 0.35), 0 7px 0 2px $baseColor
  &:active span
    box-shadow 0 2px 0 #2c2c2c
    transform translate(0, 3px)
  & span
    display inline-block
    background-color #474747
    padding 7px 13px
    border-radius 5px
    box-shadow 0 8px 0 #2c2c2c
    transition color .3s






