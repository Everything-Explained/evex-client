

input, textarea
	position: relative
	display: block
	color: $input-color
	width: 100%
	background: $panel
	font-size: 21px
	font-family: Verdana, Geneva, Tahoma, sans-serif
	padding: 5px
	border: 2px solid #000
	transition: color .3s

	&:focus
		color: $input-focus-color

	&::-webkit-input-placeholder
		font-family: PT, Consolas, "Lucida Console", monospace
		color: $input-placeholder-color
		font-style: italic
		text-align: center

	&.active
		color: $input-focus-color




.textbox-container
	position: relative
	border: 5px solid $panel
	display: block
	z-index: 1

	.wedge
		position: absolute
		display: block
		content: ''
		height: 40%
		width: 13%
		transition: width .3s, height .3s, border .5s
		pointer-events: none
		z-index: 1

		&.textarea
			height: 21%
			width: 21%

		&:first-child
			border-top: 2px solid $input-wedge-color
			border-left: 2px solid $input-wedge-color

		&:last-child
			border-right: 2px solid $input-wedge-color
			border-bottom: 2px solid $input-wedge-color
			right: 0
			bottom: 0

		&.active
			width: 100%
			height: 100%
			border-color: $input-wedge-active-color
