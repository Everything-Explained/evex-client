@import "../_utilities"

body, html
  font 14px 'Verdana', 'Geneva', 'Tahoma', sans-serif
  // background url($body-bg-image) repeat fixed
  background-color #111
  overflow-x hidden
  height 100%
  -webkit-font-smoothing antialiased;
  -moz-osx-font-smoothing grayscale;


body, div, article, span, ul, menu, input,
textarea, section, a, p, header, footer,
button, form, aside, #PageContent, label,
pre
  padding 0
  margin 0
  line-height normal
  outline none
  border none
  box-sizing border-box

a:link, a:visited, a:active, a:hover
  color #c691ff
  text-decoration none;
  border-bottom 1px dashed hsl(50, 60%, 50%)
  transition color .3s

a:hover
  color $transient-light


@keyframes myFadeIn
  0%
    opacity 0
  100%
    opacity 1





.au-enter-active
  animation myFadeIn 0.7s


.body-loader
  position fixed
  top 0
  right 0
  left 0
  bottom 0

  &:before
    position relative
    display block
    top 200px
    height 128px
    width 128px
    margin 0 auto
    background $body-loader
    content ''

  &:after
    position relative
    top 220px
    display block
    margin 0 auto
    width 300px
    text-align center
    content attr(data-message)
    font-family $ff-mono
    font-size 20px
    color $head-1-color



::selection
  background $body-selection


::-moz-selection
  background opacify($panel, 0.3)


input
  border none
  font-size 17px


main
  position absolute
  display block
  top 0
  left 0
  right 0
  bottom 0
  z-index 1

button
  font-size 21px

#PageTransition
  position absolute
  top 0
  bottom 0
  right 0
  left 0
  background-color black
  opacity 0
  z-index 20
  pointer-events none
  transition opacity .3s

  &.active
    opacity 0.5
    pointer-events auto

.cover
  position absolute
  display none
  top 0
  left 0
  right 0
  bottom 0
  background-color #111
  z-index 10000

  .response
    display block
    width 100%
    font-family 'comfortaa'
    font-size 28px
    font-variant small-caps
    letter-spacing 2px
    word-spacing 1px
    color hsl(50, 90%, 60%)
    padding-top 100px
    text-align center

  span
    position relative
    top -10px
    color hsl(126, 70%, 70%)

  .container
    position relative
    display block
    margin-top 77px
    text-align center

  a:link, a:hover, a:active, a:visited
    text-decoration none !important
    border none !important

  .fail
    position relative
    top 10px
    color hsl(324, 100%, 75%)

  .icon
    display inline-block
    width 180px
    height 128px
    background-position center center
    background-repeat no-repeat
    &:before
      position absolute
      display block
      width 180px
      font-family 'comfortaa';
      letter-spacing 1px
      word-spacing 2px
      font-size 20px
      opacity 0
      color hsl(126, 70%, 70%)
      text-align center
      top 100%
      box-sizing border-box
      white-space pre
      transition all .3s
    &:hover:before
      opacity 1

  .firefox
    background-image url('http://img04.deviantart.net/1fbf/i/2004/09/3/5/firefox_dock_icon_v3.png')
    &:before
      content 'Try \a FireFox!'

  .chrome
    background-image url('http://icons.iconarchive.com/icons/franksouza183/fs/128/Apps-google-chrome-icon.png')
    &:before
      content 'Try \a Google Chrome!'

  .opera
    background-image url('https://upload.wikimedia.org/wikipedia/commons/thumb/4/49/Opera_2015_icon.svg/128px-Opera_2015_icon.svg.png')
    &:before
      content 'Try \a Opera!'
