
.error-container
  text-align center
  h1
    margin-top 100px
    font-family 'comfortaa'
    font-variant small-caps
    letter-spacing 2px
    word-spacing 2px
    font-size: 28px
    color hsl(0, 80%, 70%)
    span
      position: relative
    .fail
      top 10px
      color hsl(30, 100%, 60%)
    .info
      top -10px
      color hsl(126, 50%, 70%)

