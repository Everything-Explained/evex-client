
menu#MainMenu
  margin-top: 15px
  font-size: 29px
  font-family: Comfort, sans-serif
  display: flex
  justify-content: flex-end

  ul
    position: relative
    list-style: none
    width: 95%

    li
      position: relative
      padding: 5px 7px 5px 0
      display: block
      text-align: right
      color: $menu-item-color
      text-shadow: $menu-text-shadow
      border-top-left-radius: 13px
      border-bottom-left-radius: 13px
      border-left: 4px solid transparent
      transition: color 0.3s, background 0.3s, border .3s, opacity .3s
      opacity: $menu-item-opacity
      overflow: hidden
      user-select: none


      &:hover
        background: $menu-bg-hover
        color: $menu-hover-color
        cursor: pointer
        opacity: 1
        background-clip: padding-box

      &.active
        color: $menu-hover-color
        opacity: 1
        background: $panel
        border-left: 4px solid $accent-color

      &.page-loader
        background: $panel $menu-page-loader 75% 50% no-repeat !important
        transition: none !important





menu#TabMenu
  position: relative
  height: 100%
  left: 200px

  ul
    position: absolute
    bottom: 0
    list-style: none

    li
      display: inline-block
      margin-right: 7px
      padding: 7px 13px
      font-family: Comfort, sans-serif
      font-size: 20px
      color: $menusub-item-color
      text-transform: capitalize
      border-top-left-radius: 13px
      border-top-right-radius: 13px
      opacity: $menusub-item-opacity
      transition: opacity .3s, color .3s, border .2s
      cursor: pointer
      user-select: none

      &.active
        opacity: 1
        color: $menusub-item-active-color
        border-top: 4px solid $menusub-item-active-border-color
        background-color: $panel

      &:hover
        opacity: 1
        color: $menusub-item-active-color
