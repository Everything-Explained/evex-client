
article
  border-top 4px solid transparent
  border-left 4px solid transparent
  margin-right 15px
  p
    display block
    padding 13px 8px
    background $panel
    font-size 18px
    word-spacing: 2px
    font-family $ff-comic
    color $article-content-color
    border-top-right-radius 6.5px
    border-top-left-radius 3.5px
    margin-bottom 7px
    margin-top 0
    padding 23px 10px
    transition: background .3s
    &:last-child
      margin-bottom 50px
    &:hover
      background-color hsla(278, 40%, 37%, 0.7 / $golden-ratio)

.preload-container
  position: absolute
  top: 100px
  left: 0
  right: 0
  bottom: 0
  opacity: 0
  visibility: hidden
  transition all .3s ease

  &.hide
    display: none !important
    visibility: hidden !important
    opacity 0 !important

  &.show
    display: block
    visibility: visible
    opacity 1


.form
  position: relative
  display: block
  margin 0 auto
  width 650px
  opacity 1
  visibility: visible
  transition: all .3s ease

  &.hide
    visibility: hidden
    opacity 0

  &.show
    visibility: visible
    opacity 1

  .name, .about-me, .email
    margin-top: 20px
    width 250px
    font-family: Source Code Pro
    color hsl(278, 17%, 67%)
    word-spacing: -1px
    &:first-child
      margin-top 0
    &:disabled
      opacity 0.5

  .email
    width 320px

  .about-me
    width 650px
    height 300px

  .counter
    position: relative
    margin-left 20px
    font-size small
    color hsl(0, 0%, 50%)
    opacity 1
    visibility: visible
    transition all .5s
    &.hide
      visibility: hidden
      opacity 0
    span
      color hsl(50, 50%, 50%)

  .name-counter, .email-valid
    position: absolute
    top 10px
    left 250px

  .submit-counter
    position: absolute
    bottom 0

  .email-valid
    top 87px
    left 320px


// End Form



.success
  position: absolute
  top 200px
  left 0
  right 0
  bottom 0
  color hsl(0, 0%, 50%)
  font-size: large
  text-align: center
  font-family: 'source code pro'
  transition all .3s
  &.hide
    visibility: hidden
    opacity 0
  &.show
    visibility: visible
    opacity: 1

  span
    padding-bottom: 4px
    border-bottom: 4px double hsl(0, 0%, 30%)
    border-radius 7px

  b
    font-weight: normal
    color hsl(120, 33%, 50%)