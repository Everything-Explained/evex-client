@import '../_utilities'

$header
	position relative
	right 12px
	align-self flex-end
	margin-top 34px
	padding 2px 13px
	content attr(role)
	text-transform capitalize
	color $article-header-color
	text-shadow $article-header-text-shadow
	width 34%
	font-size 34px
	font-family Comfort, monospace
	text-align center
	background $panel
	border-top-left-radius 13px
	border-top-right-radius 13px

$content
	display block
	padding 13px 8px
	background $panel
	font-size 17px
	font-family $ff-monospace
	color $article-content-color
	text-shadow $article-content-text-shadow
	border-top-right-radius 6.5px
	border-top-left-radius 3.5px


#articles
	position absolute
	display block
	top 0
	bottom 0
	left 150px
	right 30px
	transition opacity .3s


article.home
	position relative
	display flex
	-ms-flex-direction column
	flex-direction column
	margin 0 auto
	b, i, em
		color $text-emphasis


article[role='about']
	border-top 4px solid transparent
	border-left 4px solid transparent
	margin-right 15px
	p
		@extend $content
		margin-bottom 10px
		margin-top 0
		&:last-child
			margin-bottom 50px


article[role='rules']
	position relative
	border-top 4px solid transparent
	border-left 6px solid transparent

	.rules-container
		@extend $content
		position relative
		display flex
		margin-top 5px
		border-top-right-radius 0
		border-top-left-radius 0
		padding 0

		&:first-child
			margin-top 0
			border-top-left-radius 3.5px
		// 3.5
		&:last-child
			border-bottom-right-radius 7px

		.rule
			flex 4
			padding 13px 8px
			text-align center
			font-size 21px
			color $article-subheader-color
			align-self center

		.def
			flex 10
			border-left 5px solid $article-rule-separator-color
			padding 13px 8px


article[role='FAQ']
	.qablock
		position relative
		margin-top 5px
		width 100%
		display flex
		flex-direction column

		.question
			@extend $content
			padding 13px 0 7px 5px
			width 49.4%
			color $article-question-color
			font-family Comfort, sans-serif
			font-size 20px
			letter-spacing 1px
			background $article-question-bg-color
			border-color $article-question-border-color
			align-self flex-end
			border-radius 13px 0 13px 0
			transition background .3s

		.answer
			@extend $content
			margin-top 2px
			width 80%
			align-self flex-start
			transition background .3s
			border-radius 13px 0 13px 0

	.textbox-container
		position absolute
		width 45%


article[role='register']
	position relative
	&:first-child
		margin-top 10px
	.form-block
		position relative
		display flex
		margin-top 55px
		width 100%
		flex-direction row
		&:first-child
			margin-top 0 !important

		.description
			@extend $content
			background $panel
			border-left none
			border-color $accent-color
			padding 13px 5px 13px 8px
			border-radius 0 13px 0 0
			flex 1

		.input
			text-align center
			width 377px
		.textbox-container.textarea
			display block
			margin 0 auto
			width 97% !important

		textarea
			display block
			width 100% !important
			text-align left !important
			height 233px
			resize none
			&.area
				display block
			.char-count
				color black
