

$speed = 0.2s


#overlay
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	background-color: rgba(255, 255, 255, 0.7)
	opacity: 0
	visibility: hidden
	z-index: 1000
	transition: all $speed

	& > div
		perspective: 500px

	&.open
		visibility: visible
		opacity: 1




aside.modal
	position: relative
	top: 100px
	margin: 0 auto
	width: 50%
	box-shadow: 0 0 23px 3px #ccc
	border-radius: 5px
	transform: rotateX(-55deg)
	transition: all $speed ease-in-out

	&.open
		transform: rotateX(0deg) rotateZ(360deg)

	a.close:visited,
	a.close:active,
	a.close:link
		position: absolute
		right: -13px
		top: -13px
		border-radius: 50%
		font-size: 20px
		padding: 3px 8px 5px 8px
		font-weight: bold
		text-decoration: none
		color: deeppink
		background-color: #fff
		box-shadow: 0 0 10px 1px  #aaa
		transition: all $speed ease-in-out

	a.close:hover
		background-color: deeppink
		color: #fff

