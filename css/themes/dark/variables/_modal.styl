@import '_base'

// OVERLAY
$modal-overlay-bg-color = hsla(0, 0, 5%, .7)
$modal-preloader = 'https://ucarecdn.com/0314739b-1224-4fa7-bca7-bca995c681e5/darkloader.gif'

$purple = #d6a8ff
$purplebg = hsl(278, 40%, 33%)
$contentcolor = hsl(274, 13%, 20%)

// MAIN
// $modal-bg = url($body-bg-image)
$modal-default-color = #ddd
$modal-boxshadow = 0 1px 23px 5px #000
$modal-header-color = #000
$modal-h2-color = hsl(278, 100%, 77%)
$modal-header-bg-color = hsla(52, 100%, 50%, 1)
$modal-separator-border = transparent
$modal-content-color = #ccc
$modal-content-bg-color = hsla(0, 0, 7%, 0.7)
$modal-content-outline-size = 1px
$modal-content-outline-color = #000

// CLOSE BUTTON
$modal-close-btn-color = #000
$modal-close-btn-bg = #d6a8ff
$modal-close-btn-hover-color = #000
$modal-close-btn-hover-bg = $head-1-color
$modal-close-btn-boxshadow = 0 0 13px 2px  #000
$modal-close-bg-color = transparent



// BIBLE VERSE
$modal-bbl-number-color = hsla(278, 80%, 80%, 0.83)
$modal-bbl-content-header-color = $purple
$modal-bbl-color = #aaa


// LOGIN
$modal-login-input-color = #fff
$modal-login-check = $head-1-color
$modal-login-check-invalid = deeppink
$modal-login-status-success = rgba(150, 230, 150, 1)
$modal-login-status-error = rgba(230, 150, 150, 1)
$modal-login-status-bg = rgba(0, 0, 0, .17)

$modal-login-img-border = hsla(255, 100%, 100%, .13)
$modal-login-img-inner-boxshadow = hsla(0, 0, 0, .17)
$modal-login-img-bg = $panel

$modal-login-input-bg = rgba(255, 255, 255, .04)
$modal-login-input-border = hsla(255, 100%, 100%, .13)
$modal-login-input = $head-1-color
$modal-login-input-boxshadow = hsla(0, 0, 0, .19)
$modal-login-default-img-color = #d7d7d7


// ROBOT
$modal-robot-container-bg = hsla(0, 100%, 100%, 0.1)

$modal-robot-node-bg = #888
$modal-robot-node-border = hsl(278, 25%, 45%)
$modal-robot-boxshadow = hsla(0, 0, 0, 0.9)


// CHANGELOG
$modal-changelog-add = #bee2bf
$modal-changelog-chg = #aaa
$modal-changelog-fix = #e5c0c0


$exc-saturation = 60%
// EXCEPTION
$modal-exception-header = hsl(52, 70%, 70%)
$modal-exception-header-bg = linear-gradient(to right, hsla(0,0%,0%,0.3) 0%,hsla(0,100%,$exc-saturation,1) 50%,hsla(0,0%,0%,0.3) 100%);
$modal-exception-stack = $modal-exception-header
$modal-exception-stack-bg = hsl(0, 30%, 13%)
