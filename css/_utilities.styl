
// FONT DECLARATIONS

$ff-comic = Delius, 'Comic Sans MS', cursive, sans-serif
$ff-verdana = Comfortaa, Verdana, Geneva, sans-serif

// EASE IN
$ease-in-quad = cubic-bezier(0.55, 0.085, 0.68, 0.53)
$ease-in-cubic = cubic-bezier(0.55, 0.055, 0.675, 0.19)
$ease-in-quart = cubic-bezier(0.895, 0.03, 0.685, 0.22)
$ease-in-quint = cubic-bezier(0.755, 0.05, 0.855, 0.06)
$ease-in-sine = cubic-bezier(0.47, 0, 0.745, 0.715)
$ease-in-expo = cubic-bezier(0.95, 0.05, 0.795, 0.035)
$ease-in-circ = cubic-bezier(0.6, 0.04, 0.98, 0.335)
$ease-in-back = cubic-bezier(0.6, -0.28, 0.735, 0.045)

// EASE OUT
$ease-out-quad = cubic-bezier(0.25, 0.46, 0.45, 0.94)
$ease-out-cubic = cubic-bezier(0.215, 0.61, 0.355, 1)
$ease-out-quart = cubic-bezier(0.165, 0.84, 0.44, 1)
$ease-out-quint = cubic-bezier(0.23, 1, 0.32, 1)
$ease-out-sine = cubic-bezier(0.39, 0.575, 0.565, 1)
$ease-out-expo = cubic-bezier(0.19, 1, 0.22, 1)
$ease-out-circ = cubic-bezier(0.075, 0.82, 0.165, 1)
$ease-out-back = cubic-bezier(0.175, 0.885, 0.32, 1.275)

// EASE IN OUT
$ease-io-quad = cubic-bezier(0.455, 0.03, 0.515, 0.955)
$ease-io-cubic = cubic-bezier(0.645, 0.045, 0.355, 1)
$ease-io-quart = cubic-bezier(0.77, 0, 0.175, 1)
$ease-io-quint = cubic-bezier(0.86, 0, 0.07, 1)
$ease-io-sine = cubic-bezier(0.445, 0.05, 0.55, 0.95)
$ease-io-expo = cubic-bezier(1, 0, 0, 1)
$ease-io-circ = cubic-bezier(0.785, 0.135, 0.15, 0.86)
$ease-io-back = cubic-bezier(0.68, -0.55, 0.265, 1.55)
$golden-ratio = 1.61803

text-outline($sz, $clr)
  text-shadow 1px 0 $sz $clr, 0 1px $sz $clr, -1px 0 $sz $clr, 0 -1px $sz $clr, -1px -1px $sz $clr, 1px 1px $sz $clr

placeholder($clr)
  ::-webkit-input-placeholder
    color: $clr


box3d($sz, $clr)
  val = ''
  for num in (1..$sz)
    val += '-' + num + 'px ' + num + 'px 0 1px ' + $clr + ','
  return unquote(replace(',$','', val))

text3d($sz, $clr)
  val = ''
  for num in (1..$sz)
    val += '-' + num + 'px ' + num + 'px 0 ' + $clr + ','
  return unquote(replace(',$','', val))

opacify($color, $opacity)
  $h = hue($color)
  $c = 0, saturation($color), lightness($color)
  return hue(hsla($c, $opacity), $h)
