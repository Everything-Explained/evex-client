doctype html
html
  head
    style.
      body, html {
        background: hsl(0, 0%, 6.7%);
      }
      .page-in {
        opacity: 1 !important;
      }
      .anim-leave {
        animation: MyFadeIn 0.7s reverse;
      }
      .body-loader {
        position: fixed;
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
      }
      .conditions {
        position: absolute;
        display: none;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #111;
        z-index: 10000;
      }
      .conditions .response {
        display: block;
        width: 100%;
        font-family: Comfortaa, Verdana, Geneva, sans-serif;
        font-size: 28px;
        font-variant: small-caps;
        letter-spacing: 2px;
        word-spacing: 1px;
        color: #f5d63d;
        padding-top: 100px;
        text-align: center;
      }
      .conditions span {
        position: relative;
        top: -10px;
        color: #7de888;
      }
      .conditions .container {
        position: relative;
        display: block;
        margin-top: 77px;
        text-align: center;
      }
      .conditions a:link,
      .conditions a:hover,
      .conditions a:active,
      .conditions a:visited {
        text-decoration: none !important;
        border: none !important;
      }
      .conditions .fail {
        position: relative;
        top: 10px;
        color: #ff80cc;
      }
      .conditions .icon {
        display: inline-block;
        width: 180px;
        height: 128px;
        background-position: center center;
        background-repeat: no-repeat;
      }
      .conditions .icon:before {
        position: absolute;
        display: block;
        width: 180px;
        font-family: Comfortaa, Verdana, Geneva, sans-serif;
        letter-spacing: 1px;
        word-spacing: 2px;
        font-size: 20px;
        opacity: 0;
        color: #7de888;
        text-align: center;
        top: 100%;
        box-sizing: border-box;
        white-space: pre;
        transition: all 0.3s;
      }
      .conditions .icon:hover:before {
        opacity: 1;
      }
      .conditions .firefox {
        background-image: url("http://img04.deviantart.net/1fbf/i/2004/09/3/5/firefox_dock_icon_v3.png");
      }
      .conditions .firefox:before {
        content: 'Try \a FireFox!';
      }
      .conditions .chrome {
        background-image: url("http://icons.iconarchive.com/icons/franksouza183/fs/128/Apps-google-chrome-icon.png");
      }
      .conditions .chrome:before {
        content: 'Try \a Google Chrome!';
      }
      .conditions .opera {
        background-image: url("https://upload.wikimedia.org/wikipedia/commons/thumb/4/49/Opera_2015_icon.svg/128px-Opera_2015_icon.svg.png");
      }
      .conditions .opera:before {
        content: 'Try \a Opera!';
      }
      .cssload-container {
        display: block;
        margin: 40px auto;
        width: 70px;
      }
      .cssload-container *,
      .cssload-container *:before,
      .cssload-container *:after {
        box-sizing: border-box;
        -o-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
      }
      .preloader {
        width: 170px;
        height: 170px;
        line-height: 170px;
        margin: 56px auto;
        position: relative;
        box-sizing: border-box;
        text-align: center;
        z-index: 0;
        text-transform: uppercase;
        -o-text-transform: uppercase;
        -ms-text-transform: uppercase;
        -webkit-text-transform: uppercase;
        -moz-text-transform: uppercase;
      }
      .preloader:after {
        z-index: 1;
        animation: ripple 1.6s infinite 0.7s;
        -o-animation: ripple 1.6s infinite 0.7s;
        -ms-animation: ripple 1.6s infinite 0.7s;
        -webkit-animation: ripple 1.6s infinite 0.7s;
        -moz-animation: ripple 1.6s infinite 0.7s;
      }
      .preloader:before {
        z-index: 2;
        animation: ripple 1.6s infinite;
        -o-animation: ripple 1.6s infinite;
        -ms-animation: ripple 1.6s infinite;
        -webkit-animation: ripple 1.6s infinite;
        -moz-animation: ripple 1.6s infinite;
      }
      .preloader:before,
      .preloader:after {
        opacity: 0;
        box-sizing: border-box;
        -o-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        content: "\0020";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border-radius: 113px;
        border: 6px solid #9140bf;
        box-shadow: 0 0 56px #7e00c7, inset 0 0 56px #a766cc;
      }
      @-ms-keyframes ripple {
        0% {
          -ms-transform: scale(0);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          -ms-transform: scale(1);
          opacity: 0;
        }
      }
      @-moz-keyframes ripple {
        0% {
          transform: scale(0);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          transform: scale(1);
          opacity: 0;
        }
      }
      @-webkit-keyframes ripple {
        0% {
          transform: scale(0);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          transform: scale(1);
          opacity: 0;
        }
      }
      @-o-keyframes ripple {
        0% {
          transform: scale(0);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          transform: scale(1);
          opacity: 0;
        }
      }
      @keyframes ripple {
        0% {
          transform: scale(0);
          opacity: 0;
        }
        50% {
          opacity: 1;
        }
        100% {
          transform: scale(1);
          opacity: 0;
        }
      }
