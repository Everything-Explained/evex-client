

.blog-container
  position: absolute
  top 0
  left 0
  right 0
  bottom 0
  .optiscroll
    height: 100%
    width: 80%

.dev-blog
  opacity: 0
  visibility: hidden
  padding-right 20px

  a:link, a:visited, a:active
    color hsl(0, 0%, 65%)
  a:hover
    color hsl(278, 70%, 75%)

  &.is-loaded
    opacity: 1
    visibility: visible
    transition: all .5s ease

  h1
    position: relative
    display: block
    margin 20px 0 0 15px
    padding 10px 20px
    color hsl(278, 30%, 70%)
    font-size 30px
    font-family: 'Comfortaa'
    font-variant: small-caps
    letter-spacing: 1px
    border-radius 5px 5px 0 0
    &:first-child
      margin-top 5px
    &:after
      position: absolute
      bottom 3px
      right 10px
      content attr(data-date)
      color hsl(50, 10%, 50%)
      font-size: 16px
      font-family: 'Source Code Pro'
      letter-spacing: normal
      font-variant: normal
      font-weight: normal

  article
    color hsl(0, 0%, 55%)
    font-size: 18px
    font-family: 'Nunito'
    font-weight: 300
    &:last-child
      margin-bottom: 100px
  code
    font-family: 'Source Code Pro'
    padding 0 7px
    background-color: hsl(0, 0%, 10%)
  p
    margin-left 7px
    padding 10px 10px 10px 10px
    margin-bottom 7px
    background-color: $panel
    line-height: 30px
    border-radius: 5px
  strong
    font-weight: 400
    color hsl(0, 0%, 65%)