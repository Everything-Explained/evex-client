

.blog-container
  position: absolute
  top 0
  left 0
  right 0
  bottom 0
  .optiscroll
    height: 100%
    width: 100%
  .error
    position: relative
    width 100%
    top 50px
    text-align: center
    font-size: 36px
    font-variant: small-caps
    letter-spacing: 2px
    font-family: Comfortaa
    font-weight: 300
    color hsl(278,50%,80%)
    span
      position: relative
    .fail
      top 10px
      color hsl(50, 80%, 70%)
    .info
      top -10px
      color hsl(126, 80%, 80%)

.dev-blog
  opacity: 0
  visibility: hidden
  padding-right 20px

  a:link,
  a:visited,
  a:active
    border-bottom 1px dashed hsl(278, 27%, 55%)
    color inherit
  a:hover
    color hsl(278, 70%, 75%)

  &.is-loaded
    opacity: 1
    visibility: visible
    transition: all .5s ease

  h1
    position: relative
    display: block
    margin 0 70px 20px 15px
    padding  0 0 10px 20px
    color hsl(278, 30%, 70%)
    font-size 36px
    font-family: 'Comfortaa'
    font-variant: small-caps
    text-align: center
    font-weight: 300
    letter-spacing: 1px
    border-radius 5px 5px 0 0
    &:first-child
      margin-top 5px
    // *********
    //    DATE
    // *********
    &:before
      position: absolute
      top 77%
      left 50%
      content attr(data-date)
      color hsla(0, 0%, 100%, 0.33 / $golden-ratio)
      font-size: 18px
      font-family: 'Source Code Pro'
      letter-spacing: normal
      font-variant: normal
      font-weight: normal
      transform translateX(-50%)
  h2
    margin 0 0 0 7px
    padding 17px 10px 0 27px
    font-family: 'comfortaa'
    font-weight: 300
    font-variant: small-caps
    letter-spacing: 1px
    color hsl(50, 63%, 45%)
    background-color: hsla(0, 100%, 100%, 0.06 / $golden-ratio)


  .separator
    position: relative
    height 1px
    width 60%
    left 50%
    background: linear-gradient(
                  to right,
                  hsla(50, 30%, 20%, 0)    0%,
                  hsla(50, 70%, 20%, 0.70) 50%,
                  hsla(50, 30%, 20%, 0)    100%);
    transform: translateX(-50%)
    &:first-child
      margin-top: 64px
    // Every bottom hr for each article
    &:nth-child(3)
      margin-bottom: 33px

  h3
    position: relative
    display: block
    margin 0 0 0 7px
    padding 33px 0
    text-align: center
    font-size: 20px
    font-family: 'Delius'
    font-weight: normal
    color hsl(50, 50%, 43%)
    background-color: hsla(0, 100%, 100%, 0.06 / $golden-ratio)
    &:before, &:after
      position: absolute
      content: ' '
      height 1px
      width 50%
      left 50%
      background linear-gradient(
                    to right,
                    hsla(50, 30%, 43%,0)     0%,
                    hsla(278, 40%, 43%,0.65) 50%,
                    hsla(50, 30%, 43%,0)     100%);
      transform translateX(-50%)
    &:before
      top 10px
    &:after
      bottom 10px

  .container:last-child
    margin-bottom: 150px;

   article
    margin-bottom 100px
    color hsl(0, 0%, 60%)
    padding-right: 70px
    font-size: 18px
    font-family: 'Nunito'
    font-weight: 300
  code
    display: inline
    font-family: 'Source Code Pro'
    font-size: 16px
    background-color: hsl(0, 0%, 7%)
  p, .code
    margin-left 7px
    padding 10px 10px 10px 10px
    background-color: hsla(0, 100%, 100%, 0.06 / $golden-ratio)
    line-height: 30px
  pre
    background-color: hsl(0, 0%, 8%)
    padding 10px
    margin 0 3%
    border-radius: 5px
    code
      background-color: inherit
  strong
    font-weight: 400
    color hsl(0, 0%, 70%)
  .greek
    font-family: 'Source Code Pro'
    font-size: 24px
// END BLOG



@-moz-document url-prefix()
  .dev-blog
    h1
      font-size: 32px
    h2
      font-size 24px