
$header
  position relative
  right 12px
  align-self flex-end
  margin-top 34px
  padding 2px 13px
  content attr(role)
  text-transform capitalize
  color $article-header-color
  text-shadow $article-header-text-shadow
  width 34%
  font-size 34px
  font-family $ff-verdana
  text-align center
  background $panel
  border-top-left-radius 13px
  border-top-right-radius 13px

$content
  display block
  padding 13px 8px
  background $panel
  font-size 18px
  word-spacing: 2px
  font-family 'Nunito'
  font-weight: 300
  color $article-content-color
  border-top-right-radius 6.5px
  border-top-left-radius 3.5px


#articles
  position absolute
  display block
  top 0
  bottom 0
  left 150px
  right 30px
  transition opacity .3s


article.home
  position relative
  display flex
  -ms-flex-direction column
  flex-direction column
  margin 0 auto
  b, i, em
    // color hsl(50, 50%, 50%)
    // font-family: Source Code Pro
    word-spacing: -1px
    font-style: normal
    font-weight: 400
    color hsl(0, 0%, 70%)


article[role='about']
  border-top 4px solid transparent
  border-left 4px solid transparent
  margin-right 15px
  #Email
    color $article-email-color
    font-family $ff-mono
    cursor pointer
  p
    @extend $content
    margin-bottom 7px
    margin-top 0
    padding 23px 10px
    transition: background .3s
    &:last-child
      margin-bottom 50px
    &:hover
      background-color hsla(278, 40%, 37%, 0.7 / $golden-ratio)
    &:hover b, &:hover i, &:hover em
      color hsl(50, 50%, 50%)



article[role='rules']
  position relative
  border-top 4px solid transparent
  border-left 6px solid transparent

  .rules-container
    @extend $content
    position relative
    margin-bottom: 5px
    display flex
    background-color: transparent
    border-top-right-radius 0
    border-top-left-radius 0
    padding 0
    &:first-child
      margin-top 0
      border-top-left-radius 3.5px
    &:last-child
      border-bottom-right-radius 7px
    &:hover .rule, &:hover .def
      background-color hsla(278, 40%, 37%, 0.7 / $golden-ratio)
    &:hover b, &:hover i, &:hover em
      color hsl(50, 50%, 50%)
    &:hover .rule
      color $head-1-color

  .rule
    display: flex
    justify-content: center;
    flex-direction: column;
    flex 4
    padding 13px 8px
    text-align center
    font-size 21px
    background-color: $panel
    color $article-subheader-color
    transition: background .3s, color .3s

  .def
    margin-left: 5px
    flex-direction: column
    flex 10
    background-color: $panel
    padding 13px 8px
    transition: background .3s

  .legend
    display: flex
    margin-bottom 10px
    & > b
      margin-right 10px
    &:last-child
      margin-bottom 0



article[role='FAQ']
  position absolute
  top 0
  right 0
  left 0
  bottom 0

  input[type='text']
    margin 5px 0 10px 0
    width 311px

  .qa-container, .asdf
    display flex
    height 100%
    flex-direction row

  .scroller
    padding-right 16px

  .question-panel
    display flex
    height 100%
    flex-direction: column
    min-width 325px
    margin-left 7px

  #Questions
    min-width 325px
    flex 1

  #Answers
    flex 1
    background-color #1f1f1f
    padding-left 5px
    min-width 400px
    h1
      font-size 24px
      font-family 'Comic Sans MS'
      word-spacing 2px
      text-transform: capitalize
      color $article-question-color
      margin 5px 0 5px 7px
      text-shadow: -2px -2px 0 #000, -2px 0 0 #000, 0 -2px 0 #000
    span
      @extend $content
      font-size: medium
      word-spacing: 2px
      color hsl(0, 0%, 62%)
      // background-color hsla(278, 70%, 40%, 0.3 / $golden-ratio)
      background-color: #171717
      align-self flex-start
      border-radius 5px
      background-clip padding-box
      line-height: 27px
      // box-shadow 3px 3px 21px 0 #000
      transition background .3s
      margin 17px 13px 27px 21px
      b
        font-weight: 400
        color hsl(0, 0%, 70%)

    .answer-placeholder
      position relative
      display block
      text-align center
      font-size 30px
      text-shadow 1px 1px 1px #777, -1px -1px 0 #000, -2px 0 0 #000, 0 -2px 0 #000
      font-family $ff-comic
      letter-spacing 1px
      margin-top 170px
      color #555

    .none
      background-color transparent
      border none
      box-shadow none
      text-shadow 1px 1px 0 #000, 2px 2px 0 #000, 3px 3px 0 #000
      margin-top -10px
      em
        color hsl(50, 45%, 70%)

    .list-outer
      margin-top 13px
      li
        margin-bottom 13px
    .list-inner
      li
        margin-bottom: 0
        &:first-child
          margin-top: 3px;
    ul
      margin-left: 44px;
      font-size 16px
      font-family monospace
      li
        text-shadow 1px 1px 0 #000, 2px 2px 0 #000, 3px 3px 0 #000
        color hsl(0, 30%, 77%)
      em
        position relative
        top -3px
        left -1px
        text-shadow 1px 1px 0 hsl(50, 70%, 20%), 2px 2px 0 hsl(50, 70%, 20%)
        color hsl(50, 70%, 50%)


  .qablock
    position relative
    margin-bottom 7px
    width 100%
    display flex
    flex-direction column
    box-sizing border-box
    &:last-child
      margin-bottom 21px

    .question
      @extend $content
      padding 3px 11px
      width 100%
      color hsl(124, 20%, 70%)
      font-family comfortaa
      font-variant: small-caps
      font-size 20px
      text-align center
      letter-spacing 2px
      background hsl(124, 12%, 13%)
      border-color $article-question-border-color
      align-self center
      border-radius: 0
      cursor pointer
      transition background .3s

    .answer
      display none

  .textbox-container
    position absolute
    width 45%

// FireFox font rendering shinanigans
@-moz-document url-prefix()
  article[role='FAQ']
    .qablock .question
      font-size 18px
// End FireFox Hack



article[role='register']
  position relative
  &:first-child
    margin-top 10px
  .form-block
    position relative
    display flex
    margin-top 55px
    width 100%
    flex-direction row
    &:first-child
      margin-top 0 !important

    .description
      @extend $content
      background $panel
      border-left none
      border-color $accent-color
      padding 13px 5px 13px 8px
      border-radius 0 13px 0 0
      flex 1

    .input
      text-align center
      width 377px
    .textbox-container.textarea
      display block
      margin 0 auto
      width 97% !important

    textarea
      display block
      width 100% !important
      text-align left !important
      height 233px
      resize none
      &.area
        display block
      .char-count
        color black
