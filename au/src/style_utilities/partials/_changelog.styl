

$changelog-title = $head-1-color


#ChangeList
  position: absolute
  flex-flow: row wrap
  align-content: flex-start;
  border-top: 4px solid transparent
  border-left: 4px solid transparent
  padding-right 10px
  transition: all .3s linear

  .title
    margin 0 7px 5px 0
    display: inline-block
    padding: 10px 20px
    background-color $panel
    color $head-1-color
    text-align: center
    border-radius: 5px 0 13px 0
    cursor: pointer

  .date
    font-size: 20px

  .description
    color hsl(128, 50%, 60%)
    font-family: 'Source Code Pro'
    font-size 18px

#Changes
  position: absolute
  transition: all .3s linear

  a:link, a:visited, a:active
    border-bottom 1px dashed hsl(278, 27%, 55%)
    color inherit
  a:hover
    color hsl(278, 70%, 75%)

  h1
    margin 25px 0 0 44px
    padding 3px 13px 5px 13px
    display: inline-block
    color hsl(278, 45%, 75%)
    font-size: 32px
    font-family: 'Comfortaa'
    font-variant: small-caps
    font-weight: 300
    letter-spacing: 1px
    border-radius: 5px 0 13px 0
    &:first-child
      margin-top 5px
  i
    font-style: normal
    color hsl(50, 55%, 70%)
  b
    font-weight: 400
    color hsl(0, 0%, 63%)
  li
    position: relative
    left -12px
    padding 5px 5px 5px 20px
    margin 10px 0
    color hsl(0, 0%, 55%)
    font-size: 18px
    font-family: 'Nunito'
    font-weight: 300
    line-height: 27px
    word-spacing: 1px
    &:before
      position: absolute
      top 7px
      left 0
      content '\2022'
      color hsl(52, 100%, 30%)
      font-size: 12px
  ul
    margin-left: 30px
    width 80%
    list-style none
    background-color: hsla(0, 100%, 100%, 0.05 / $golden-ratio)
    &:last-child li:last-child
      margin-bottom 150px

.changelog .close
  position: fixed
  top 121px
  right 33px
  padding 1px 13px
  font-size: 40px
  color hsl(0, 80%, 63%)
  border-radius 3px
  background-color: $panel
  cursor: pointer