body, html
  height 100%
  background hsl(0, 0%, 6.7%)
  overflow hidden
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

body, div, article, span, ul,
menu, input, textarea, section,
a, p, header, footer, button,
form, aside, label, pre
  padding 0
  margin 0
  line-height: normal
  outline none
  border none
  box-sizing: border-box


a:link, a:visited, a:active
  color inherit
  text-decoration: none
  border-bottom: 1px dashed hsl(50, 40%, 50%)
  transition color .3s ease
a:hover
  color hsl(278, 70%, 75%)

::selection
  background hsla(51.8, 66.3%, 50%, 0.185)

::-moz-selection
  background: hsla(51.8, 66.3%, 50%, 0.185)

.g-visible
  visibility: visible
  opacity 1
  transition: all .3s ease

.g-hidden
  visibility: hidden
  opacity: 0
  transition: all .3s ease
