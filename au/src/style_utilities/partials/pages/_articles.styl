
$header
  position relative
  right 12px
  align-self flex-end
  margin-top 34px
  padding 2px 13px
  content attr(role)
  text-transform capitalize
  color $article-header-color
  text-shadow $article-header-text-shadow
  width 34%
  font-size 34px
  font-family $ff-verdana
  text-align center
  background hsl(0, 0%, 9.7%)
  border-top-left-radius 13px
  border-top-right-radius 13px

$content
  display block
  padding 13px 10px
  background-color: hsl(0, 0%, 9.7%)
  font-size 18px
  word-spacing: 2px
  font-family 'Nunito'
  font-weight: 300
  color hsl(0, 0%, 60%)
  border-top-right-radius 6.5px
  border-top-left-radius 3.5px


#articles
  position absolute
  display block
  top 0
  bottom 0
  left 150px
  right 30px


article.home
  position relative
  display flex
  opacity 0
  -ms-flex-direction column
  flex-direction column
  overflow-x: auto
  margin 0 auto
  transition all .15s linear
  transform translateZ(0)
  @extend .g-markdown


@import 'articles/_about'
@import 'articles/_rules'
@import 'articles/_faq'
@import 'articles/_blog'



